<?xml version="1.0" encoding="UTF-8"?>
<Form Title="Home page" xmlns="http://form.jaxb.sloth.eg.it" xmlns:xsi="http://www.w3.org/2001/XMLSchema">

 <Fields Name="Cards">
  <Text Name="numClienti" Description="Clienti" DataType="INTEGER" />
  <Text Name="numClientiAttivi" Description="Clienti attivi" DataType="INTEGER" />
 </Fields>

 <Fields Name="Aforismi">
  <Text Name="Aforisma" Description="Aforisma" DataType="STRING" />
  <Text Name="Autore" Description="Autore" DataType="STRING" />
 </Fields>

 <SimpleChart Name="MonitorDataLine" ChartType="line" Title="Tempi accesso">
  <Labels Name="shortName" DataType="STRING" Description="Pagina/Servizio" />
  <Series Name="average" Description="Average" DataType="DECIMAL" />
  <Series Name="max" Description="Max" DataType="DECIMAL" />
 </SimpleChart>

 <SimpleChart Name="MonitorDataBar" ChartType="bar" LegendPosition="top">
  <Labels Name="shortName" DataType="STRING" Description="Pagina/Servizio" />
  <Series Name="average" Description="Average" DataType="DECIMAL" />
  <Series Name="max" Description="Max" DataType="DECIMAL" />
 </SimpleChart>

 <Grid Name="MonitorLog" Table="LogElaborazioni">
  <Text Name="Elaborazione" Description="Messaggio" DataType="STRING" />
  <Text Name="DataFine" Description="Fine" DataType="DATETIME" Format="dd/MM HH:mm:ss" />
 </Grid>

</Form>

